algoritmo "digite0"
// Desenvolva um algoritmo que peça um valor ao usuário e só feche
// quando o usuário digitar o valor 0
var
   valor: Inteiro
inicio

   valor <- 1
   Enquanto (valor <> 0) faca
      Escreval("===========================================")
      Escreva("Informe um número inteiro (0 para sair): ")
      Leia(valor)
      LimpaTela
   FimEnquanto

fimalgoritmo